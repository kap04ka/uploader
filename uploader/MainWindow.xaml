<Window x:Class="uploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uploader"
        mc:Ignorable="d"
        Title="Safonov D.A. 1-46m" Height="400" Width="400">
    <Grid>

        <TextBlock x:Name="curVer" Height="50" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        <Button x:Name="updateButton" Content="Проверка обновления" Height="50" Width="150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" Click="Button_Click"/>

        <ProgressBar x:Name="uploadingBar" Height="30" Value="{Binding Path=progress}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="20, 50, 20, 20" Visibility="Hidden"/>
        <TextBlock x:Name="uploadingSpeed" Text="{Binding Path=speed}" VerticalAlignment="Center" Margin="20, 90, 10, 10"/>
    </Grid>
</Window>
